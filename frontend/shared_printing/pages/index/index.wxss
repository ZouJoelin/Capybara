/**index.wxss**/
.container{
  padding: 20rpx;
  display: flex;
  height: 100vh;
  width: 100%;
  justify-content: flex-start;
  background-color: white;
  align-items: center;
  color: #4e514e;
}
.container > view {  
  margin-bottom: 40rpx; /* 每个view标签之间的下边距 */  
} 
.container > view:last-child {  
  margin-bottom: 0; /* 最后一个view标签不需要下边距 */  
} 
.price > text {  
  color: #bd3124; /* 价格文字颜色 */  
}
