.uploader{
  position: relative;
}
.upload-file{
  position: relative;
}
.uploader-info{
  font-size: smaller;
}
.printer-status{
  display: flex;
  font-size: smaller;
}
.status-info{
  position: relative;
  left: -200rpx;
}
.page-num{
