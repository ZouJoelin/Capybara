}
.danshuang-label{
  position: relative;
  left: -250rpx;
}
.page-color{
  display: flex;
}
.color-label{
  position: relative;
  left: -250rpx;
}
.color-picker{
  position: absolute;
  right: 100rpx;
}
.page-size{
