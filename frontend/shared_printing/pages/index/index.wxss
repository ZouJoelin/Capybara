/**index.wxss**/
.container{
  padding: 20rpx;
  display: flex;
  height: 100vh;
  width: 100%;
  justify-content: flex-start;
  background-color: white;
  align-items: center;
  color: #4e514e;
  font-size: larger;
}
.container > view {  
  margin-bottom: 35rpx; /* 每个view标签之间的下边距 */  
} 
.uploader-text{
  font-size: medium;
  font-weight: bold;
}
.uploader-container{
  width: 90%;
  display: flex;
  margin-top: 10rpx;
  flex-direction: row;
}
.weixin-uploader{
  width: 290rpx;
  height: 70rpx;
  margin-right: 15rpx;
}

.local-uploader{
  width: 290rpx;
  height: 70rpx;
  margin-left: 10rpx;
}

.upload-file{
  position: relative;
  display: flex;
  border: 1px dashed #cccccc;
  border-radius: 8px;
  justify-content: center;
  align-items: center;
  width: 90%;
  height: 80rpx;
}
.uploader-info{
  font-size: smaller;
}
.printer-status{
  display: flex;
  font-size: smaller;
  width: 100%;
}
.status-info{
  position: relative;
}
.table-info {
  display: flex;
  width: 100%;
  height: 60rpx;
  padding: 6rpx;
}
.table-label {
  position: relative;
  left: 25rpx;
  padding: 5rpx;
}
.table-coin {
  position: absolute;
  left: 365rpx;
  font-size: small;
  line-height: 60rpx;
}

.table-right{
  position: absolute;
  right: 50rpx;
}

.single-btn {
  width: 100rpx;
}
.btn-group {
  width: 450rpx;
}

.table-beautify{
  border: 2px solid #3ab54a;
  border-radius: 6px;
  padding: 5rpx;
  color: white;
  background-color: #3ab54a;
}

.price{
  color: #bd3124;
}
.price-label{
  position: absolute;
  right: 50rpx;
  font-size: larger;
}
.button{
  margin-top: 40rpx;
}
.btn-text {
  font-size: large;
  line-height: 60rpx;
}
.cancel-button{
  position: absolute;
  width: 150rpx;
  height: 60rpx;
  right: 220rpx;
}
.confirm-button{
  width: 150rpx;
  height: 60rpx;
  position: absolute;
  right: 50rpx;
}
  

  